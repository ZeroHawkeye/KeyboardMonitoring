<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScrollViewer="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="KeyboardMonitoring.MainWindow"
        Title="KeyboardMonitoring - 系统键盘事件监视">
    <Grid Margin="8" RowDefinitions="Auto,*" RowSpacing="6">
        <TextBlock Text="系统键盘事件日志 (全局)" FontWeight="Bold" FontSize="16" />
        <TextBox x:Name="LogBox"
                 Grid.Row="1"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 ScrollViewer:ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer:ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas, Courier New, monospace"
                 TextWrapping="NoWrap"
                 Watermark="等待键盘事件..." />
    </Grid>
</Window>